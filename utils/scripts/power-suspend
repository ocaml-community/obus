Ocaml.packs := ["obus.hal"; "lwt.syntax"]
--

(* Make the computer to suspend to ram *)

let _ = Lwt_main.run begin
  lwt computer = Lazy.force Hal_device.computer in
  Hal_device.System_power_management.suspend computer 0
end
